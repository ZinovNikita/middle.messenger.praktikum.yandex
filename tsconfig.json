{
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals":true,
        "noUnusedParameters":true,
        "jsxImportSource": "preact",
        "isolatedModules": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx":"preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*":["src/*"]
        },
        "lib": ["ESNext","DOM","DOM.Iterable","ScriptHost","ES6","ES2017"]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}